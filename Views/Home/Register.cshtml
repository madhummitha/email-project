<html>
    <head>
@{
    ViewData["Title"] = "Register Page";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>  
<script>  
    $(document).ready(function () {  
        $("#btnSave").click(function () {  
            let username = $("#txtName").val();
            $.ajax({  
                type: "POST", 
                url: "/Home/Register",  
                data: { 
                    UserName: username,  
                    Password: $("#txtPwd").val(),
                    Email: $("#txtEmail").val(),
                    Role: $("#txtRole").val()
                },
                success: function(data){
                    if(data == 2){
                        window.location.href = '@Url.Action("AdminTemplate", "Home")';
                    }
                    else if(data == 1){
                        window.location.href = '@Url.Action("UserTemplate", "Home")';
                    }    
                    else{
                        window.alert("Registration Error");
                    }
                },
            });  
        });  
    });  
</script>  
</head>

<body>
   <h3 class="card-title text-center text-primary"> REGISTRATION FORM </h3>
    <div class="form-container">
        <form action="" method="post">
            <input type="text" name="username" id="txtName" required placeholder="Enter UserName"><br><br>
            <input type="password" name="password" id="txtPwd" required placeholder="Enter Password"><br><br>
            <input type="email" name="email" id="txtEmail" required placeholder="Enter Email"><br><br>
            <input type="text" name="role" id="txtRole" required placeholder="Enter Role"><br><br>
            <input type="button" name="submit" value="Register" class="btn btn-primary btn-block" id="btnSave"><br><br>
            
        </form>
    </div>
</body>
</html>